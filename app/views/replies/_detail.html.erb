<div class="panel panel-default">
  <div class="panel-heading">
    <%= reply.user.nickname %>さんの返信
  </div>
  <div class="panel-body">
    <%= raw markdown_to_html(reply.body) %>
    <br><span class="pull-right"><%= reply.created_at %></span>
  </div>
  <div class="panel-footer">
    <button id="like_reply_<%= reply.id %>" type="button" class="likeReply btn btn-default">
      <% if user_signed_in? && reply.liked_by?(current_user) %>
        <span class="star glyphicon glyphicon-star"></span>
      <% else %>
        <span class="star glyphicon glyphicon-star-empty"></span> 
      <% end %>
      <span class="value"><%= reply.like_number %><span>
    </button>


    いいね数：999
    <span class="pull-right">
      <%= link_to '編集', edit_notice_reply_path(notice, reply) if reply.user_id == current_user.id %>
    </span>
  </div>
</div>
