<h1>Listing replies</h1>

<table id="reply_list">
  <thead>
    <tr>
      <th>Notice</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @replies.each do |reply| %>
      <tr>
        <td><%= reply.notice_id %></td>
        <td><%= reply.body %></td>
        <td><%= reply.user_id %></td>
        <td><%= link_to 'Show', [@notice, reply] %></td>
        <td><%= link_to 'Edit', edit_notice_reply_path(@notice, reply) %></td>
        <td><%= link_to 'Destroy', [@notice, reply], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reply', new_notice_reply_path(@notice) %>
