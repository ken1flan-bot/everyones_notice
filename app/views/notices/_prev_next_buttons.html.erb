<div class="container">
  <span class="pull-left">
    <%= link_to notice_path(notice.previous), class: "btn btn-default btn-sm" do %>
      <span class="glyphicon glyphicon-step-backward"></span>
    <% end if notice.previous.present? %>
  </span>
  <span class="pull-right">
    <%= link_to notice_path(notice.next), class: "btn btn-default btn-sm" do %>
      <span class="glyphicon glyphicon-step-forward"></span>
    <% end if notice.next.present? %>
  </span>
</div>
