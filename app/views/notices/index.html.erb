<h1>Listing notices</h1>

<table id="notice_list">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th>Published at</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notices.each do |notice| %>
      <tr id="notice_row_#{notice.id}">
        <td><%= notice.title %></td>
        <td><%= notice.body %></td>
        <td><%= notice.user.nickname %></td>
        <td><%= notice.published_at %></td>
        <td><%= notice.status %></td>
        <td><%= link_to 'Show', notice %></td>
        <td><%= link_to 'Edit', edit_notice_path(notice) %></td>
        <td><%= link_to 'Destroy', notice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notice', new_notice_path %>
