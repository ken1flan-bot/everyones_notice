<%= render "notices/detail", notice: @notice %>

<% @notice.replies.each do |reply| %>
  <%= render "replies/detail", notice: @notice, reply: reply %>
<% end %>

<%= render "replies/builtin_form", user: current_user, notice: @notice %>

<% @breadcrumb = [
  [@notice.title, notice_path(@notice)],
  ["きづき一覧", notices_path]
]
%>
