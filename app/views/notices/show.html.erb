<%= render "notices/detail", notice: @notice %>

<% @notice.replies.each do |reply| %>
  <%= render "replies/detail", notice: @notice, reply: reply %>
<% end %>

<%= link_to 'Edit', edit_notice_path(@notice) if @notice.user_id == current_user.id%> |
<%= link_to 'Back', notices_path %> |
<%= link_to 'Reply', new_notice_reply_path(@notice) %>
