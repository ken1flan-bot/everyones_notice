<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @notice.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= raw markdown_to_html(@notice.body) %>
</p>

<p>
  <strong>User:</strong>
  <%= @notice.user_id %>
</p>

<p>
  <strong>Published at:</strong>
  <%= @notice.published_at %>
</p>

<p>
  <strong>Status:</strong>
  <%= @notice.status %>
</p>

<%= link_to 'Edit', edit_notice_path(@notice) if @notice.user_id == current_user.id%> |
<%= link_to 'Back', notices_path %> |
<%= link_to 'Reply', new_notice_reply_path(@notice) %>
